# pipewire
exec gentoo-pipewire-launcher restart &

# mouse
input type:pointer {
    accel_profile "flat"
    pointer_accel 0
}

seat seat0 xcursor_theme gentoo 24

# background
output * bg #1d2021 solid_color

# custom keybinds
bindsym $mod+shift+p exec grim -g "$(slurp)" - | wl-copy
bindsym $mod+n exec zen-bin

# gsettings, some settings don't work in ~/.config/gtk-3.0/settings.ini
exec_always {
    gsettings set org.gnome.desktop.interface cursor-theme 'gentoo'
    gsettings set org.gnome.desktop.interface cursor-size 24
}

